# Backend environment variables example
# App
PORT=3000
APP_BASE_URL=http://localhost:5173

# JWT
JWT_SECRET=change_this_secret

# Database (example)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=secret
DB_NAME=atilio_marola

# SMTP (for sending emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false  # true for 465, false for 587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=no-reply@yourdomain.com

# Optional: use SendGrid API instead of SMTP by setting this key
# If set, the backend will prefer SendGrid (@sendgrid/mail). Provide either this or SMTP credentials.
SENDGRID_API_KEY=your_sendgrid_api_key

# Password reset limits
RESET_WINDOW_MINUTES=60
RESET_MAX_PER_WINDOW=5
